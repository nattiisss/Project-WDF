<link rel="stylesheet" href="/css/images.css" />

{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}

<h2>Images</h2>
{{#each pics}}
  <div class="post">
    <p><b>{{username}}</b></p>
    <img src="/img/{{filename}}" alt="image">
    <p>{{description}}</p>

    {{#if ../session.isAdmin}}
      <form action="/images/delete/{{id}}" method="post">
        <button type="submit">Delete</button>
      </form>
      <form action="/images/modify/{{id}}" method="get">
        <button type="submit">Edit</button>
      </form>
    {{/if}}
  </div>
{{/each}}


