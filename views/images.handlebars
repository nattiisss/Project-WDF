<link rel="stylesheet" href="/css/images.css" />

{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}

<h2>Images</h2>
<p>Get a look at some of the events!</p>

{{#if i.id}}
    <form action="/images/modify/{{i.id}}" method="post" id="eventform" enctype="multipart/form-data">
{{else}}
  <form action="/images/new" method="post" enctype="multipart/form-data">
  <input type="file" name="image" required>
  <input type="text" name="description" placeholder="Say something...">
  <button type="submit">Upload</button>
</form>
{{/if}}

