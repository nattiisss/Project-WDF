<link rel="stylesheet" href="/css/images.css" />
<script src="/js/images.js" defer></script>

{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}
<div class="nav">
<h2>Post from all Events</h2>
<a href="/images/new" class="upload-btn">Upload New Image</a>
</div>

{{#if session.isLoggedIn}}
  <div class="images-container">
    

    {{#each pics}}
      <div class="post">
        <section class="upper">
        <p><b>@{{username}}</b></p>
        <p><span>{{created_at}}</span></p>
        </section>
        <img src="/img/{{filename}}" alt="image">
        <p class="desc">{{description}}</p>

        {{#if ../session.isAdmin}}
          <form action="/images/delete/{{id}}" method="post">
            <button type="submit">Delete</button>
          </form>
          <form action="/images/modify/{{id}}" method="get">
            <button type="submit">Edit</button>
          </form>
        {{/if}}
      </div>
    {{/each}}
  </div>
{{else}}
  <div class="images-container">
    {{#each pics}}
      <div class="post">
        <p><b>{{username}}</b></p>
        <img src="/img/{{filename}}" alt="image">
        <p>{{description}}</p>
      </div>
    {{/each}}
  </div>

  <div id="loginModal" class="modal">
    <div class="modal-content">
      <p>You need to be logged in to view images.</p>
      <a href="/loggedin"><button class="login-btn">Go to Login</button></a>
    </div>
  </div>
{{/if}}



<footer>
  <div class="footer-part-1">
    <div class="part1">
      <!--<img src="/img/white.png" alt="eventigo" />-->
      <h1>Eventigo</h1>
