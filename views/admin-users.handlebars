<link rel="stylesheet" href="/css/admin-users.css" />
<h1>All Users</h1>

{{#if users}}
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.username}}</td>
          <td>{{this.email}}</td>
          <td>{{this.role}}</td>
          <td>
            <form
              action="/admin/users/delete/{{this.id}}"
              method="post"
              onsubmit="return confirm('Are you sure?');"
            >
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No users found.</p>
{{/if}}